<%- include("header.ejs") %>

<div class="container text-center py-5 my-5">
  <div class="card pt-5">
    <a href="" data-toggle="model" data-target="#profile">
      <img src="/img/avatar.png" class="avatar" alt="" />
    </a>
    <h3 class="py-2"><%= session.name %></h3>
    <button
      data-toggle="model"
      data-target="#share"
      class="btn btn-default-outline share-alt"
    >
      <i class="fas fa-share"></i>
    </button>
  </div>
</div>

<!-- ============= profile photo ============= -->
<div
  class="modal fade"
  id="profile"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Change photo</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
        <span aria-hidden="true">&times;</span>
      </div>

      <div class="modal-body">
        <div class="container">
          <form action="" method="post">
            <label for="" class="text-muted">
              The file size of the photo should not exceed 7 MB</label
            >
            <input class="form-control" type="file" name="photo" id="" />
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ============= share ============= -->
<div
  class="modal fade"
  id="share"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">share profile</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
        <span aria-hidden="true">&times;</span>
      </div>

      <div class="modal-body">
        <a target="_blank" href="<%= url %>"><%= url %></a>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<!-- ============= message ============= -->
<div class="container text-center my-5">
  <div class="row">
    <% for(let i = 0; i < messages.length; i++) {%>
    <div class="col-md-12">
      <div class="card py-5">
        <p><%= messages[i].content %></p>
      </div>
    </div>
    <%}%>
  </div>
</div>

<%- include("footer.ejs") %>

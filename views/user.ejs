<%- include("header.ejs") %>

<div class="container text-center py-5 my-5">
  <div class="card py-5 mb-5">
    <a href="" data-toggle="model" data-target="#profile">
      <img src="/img/avatar.png" class="avatar" alt="" />
    </a>
    <h3 class="py-2"><%= session.name %></h3>

    <div class="container w-50 m-auto">
      <form action="/sendMsg/<%= session.userId %>" method="post">
        <textarea
          class="form-control"
          name="msg"
          id=""
          cols="10"
          rows="9"
          placeholder="you can't send a saraha message to yourself, share your profile with your friends :)"
        ></textarea>
        <button class="btn btn-outline-info mt-3">
          <i class="far fa-paper-plane"></i>Send
        </button>
      </form>
    </div>
  </div>
  <button
    data-toggle="model"
    data-target="#share"
    class="btn btn-default-outline share"
  >
    <i class="far fa-share-alt"></i>Send
  </button>
</div>

<!-- ============= share ============= -->
<div
  class="modal fade"
  id="share"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">share profile</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
        <span aria-hidden="true">&times;</span>
      </div>

      <div class="modal-body">
        <p>host/messages/id</p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<%- include("footer.ejs") %>
